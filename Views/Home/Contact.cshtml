}

@Html.Partial("~/Views/Shared/background.cshtml")
<section class="ftco-section contact-section bg-light">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="w-100"></div>
            <div class="col-md-3 d-flex">
                <div class="info bg-white p-4">
                    <p><span><i class="fas fa-map-marker-alt"></i> Address:</span> 123 Xô Viết Nghệ Tĩnh, P26, Quận Bình Thạnh, Tp HCM</p>
                </div>

            </div>
            <div class="col-md-3 d-flex">
                <div class="info bg-white p-4">
                    <p><span>Phone:</span> <a href="tel://1234567920">+84 8221 85170</a></p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="info bg-white p-4">
                    <p><span>Email:</span> <a href="mailto:quangsus1114@gmail.com">quangtrantroi@gmail.com</a></p>
                </div>
            </div>
        </div>

        <div class="row block-9">
            <div class="col-md-6 order-md-last d-flex">
                <form action="@Url.Action("SendEmail", "Home")" method="post" class="bg-white p-5 contact-form">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Họ và tên">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="subject" placeholder="Chủ đề">
                    </div>
                    <div class="form-group">
                        <textarea name="message" cols="30" rows="7" class="form-control" placeholder="Tin nhắn"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Gửi" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
            </div>

            <div class="col-md-6 d-flex">
